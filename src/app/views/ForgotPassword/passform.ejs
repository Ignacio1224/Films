<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Include of style sheets and meta markups -->
    <% include ../assets/static/html/head %>
    <title>Forgot Password | FILMS</title>
</head>

<body>
    <% if(error.length > 4 && valid.length > 4) { %>
        <div class="container py-5">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <span class="anchor" id="formResetPassword"></span>
                    <hr class="mb-5">

                    <div class="card card-outline-secondary">
                        <div class="card-header">
                            <h3 class="mb-0">Password Reset</h3>
                        </div>
                        <div class="card-body">
                            <form class="form" role="form" autocomplete="off" method="POST" action="/ChangePasswordReset">
                                <input type="hidden" name="txtUserEmailReset" id="txtUserEmailReset" value="<%= email %>">
                                <div class="form-group">
                                    <label for="txtPasswordNew">New Password</label>
                                    <input type="password" class="form-control" id="txtPasswordNew" name="txtPasswordNew"
                                        required>
                                    <span class="form-text small text-muted">
                                        The password must be 8-20 characters, and must <em>not</em> contain spaces.
                                    </span>
                                </div>

                                <div class="form-group">
                                    <label for="txtPasswordNewVerify">Verify</label>
                                    <input type="password" class="form-control" id="txtPasswordNewVerify" name="txtPasswordNewVerify"
                                        required>
                                    <span class="form-text small text-muted">
                                        To confirm, type the new password again.
                                    </span>
                                </div>

                                <%if (error.length > 6 && valid === "Init0") { %>
                                    <div id="divError" class="alert alert-danger alert-dismissable" style="display: block;">
                                        <span>
                                            <%= error %>
                                        </span>
                                    </div>
                                <% } %>

                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-success btn-md float-right">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <% if (error === "Init0" && valid.length > 6) { %>
            <div class="modal fade bd-example-modal-md" tabindex="-1" role="dialog" id="resetPasswordModalCorrect" aria-hidden="true">
                <div class="modal-dialog modal-md">
                    <div class="modal-content text-light text-center">
                        <h4 class="pt-2"><%= valid %></h4>
                    </div>
                </div>
            </div>
        <% } %>

    <% } else { %>
        <h1>No tienes permiso</h1>
    <% } %>
    
    <!-- Include of scripts -->
    <% include ../assets/static/html/footer %>

</body>

</html>