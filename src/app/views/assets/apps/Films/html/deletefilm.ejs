<div class="card card-outline-secondary">
    <div class="card-header">
        <h3 class="mb-0"><span class="fas fa-trash-alt"></span> Delete Film <span class='alert <%=Page["DeleteFilm"]["clas"]%> alert-dismissable ml-5'>
                <%= Page['DeleteFilm']["messaje"] %></span></h3>
    </div>
    <div class="card-body">
        <form class="form" role="form" autocomplete="off" method="POST" action="/DeleteFilm?filter=true">
            <div class="form-group row">
                <label class="col-lg-3 col-form-label form-control-label" for="cmbFilmName">Film Name</label>
                <div class="col-lg-9">
                    <select class="form-control custom-select" id="cmbFilmName" name="cmbFilmName" required>
                        <option value="" selected>------</option>
                    </select>
                </div>
            </div>

            <div class="form-group row">
                <label for="chbxConfirm" class="col-lg-3 col-form-label form-control-label">Confirm</label>
                <div class="col-lg-9 form-check">
                    <input class="form-control form-check-input position-static" type="checkbox" id="chbxConfirm" name="chbxConfirm"
                        value="1" style="box-shadow: none;">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-lg-3 col-form-label form-control-label"></label>
                <div class="col-lg-9">
                    <button type="submit" class="btn btn-primary">Delete</button>
                </div>
            </div>
        </form>
    </div>
</div>