<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <script src="/assets/jquery.js" type="text/javascript"></script>   
    <script src="/assets/bootstrap.js" type="text/javascript"></script>    
    <script src="/assets/ui.js" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="/assets/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="/assets/base.css">
    <title>LogIn</title>
</head>

<body>

    <body>

        <!-- View login -->
        <div class="mainGradient container-fluid" id="viewLogin">
            <div class="row justify-content-md-center">
                <div class="col"></div>
                <div id="squareLogin" class="col-md-auto bg-light mt-5 rounded transparentBorder shadow p-3 mb-5">
                    <h1 class="display-6 mt-5">Film History System</h1>
                    <h6 class="text-center">Access Sistem</h6>

                    <!-- Form -->
                    <form class="mt-5" action="/Films" method="POST">
                        <div class="form-group" id="ctlGroupUsername">
                            <label for="txtUsername" id="lblUsername">Username</label>
                            <input class="form-control" id="txtUsername" name="userName" maxlength="8" placeholder="Ignacio">
                        </div>
                        <div class="form-group">
                            <label for="txtPassword" id="lblPassword">Password</label>
                            <input class="form-control" type="password" id="txtPassword" name="passwords">
                        </div>
                        <div class="text-center">
                            <input type="submit" class="btn btn-success" id="btnLogIn" value="LogIn"/>
                        </div>
                    </form>
                    <br>
                    <br>
                    <%if (error !== "") { %>
                        <div id="divError" class="alert alert-danger alert-dismissable" style="display: block;">
                            <span><%= error %></span>
                        </div>
                    <% } %>
                </div>
                <div class="col"></div>
            </div>
        </div>

    </body>

</html>