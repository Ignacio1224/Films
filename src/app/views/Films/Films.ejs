<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <script src="/assets/jquery.js" type="text/javascript"></script>   
    <script src="/assets/bootstrap.js" type="text/javascript"></script>    
    <script src="/assets/ui.js" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="/assets/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="/assets/base.css">
    <title>FILMS</title>
</head>

<body>

    <body>

        <!-- View FILMS -->
        <div class="container-fluid" id="viewFilm">
            <nav class="navbar navbar-expand-lg navbar-dark mainGradient">
                <!-- FHS Logo -->
                <a class="navbar-brand" href="#">
                    <!-- <img src="../images/chsLogo.png" width="30" height="30" class="d-inline-block align-top" alt=""> &nbsp; -->
                    <span>Film History System</span>
                </a>

                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav w-100">
                        <li class="nav-item dropdown ml-auto">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownUserName" role="button" data-toggle="dropdown" aria-haspopup="true"
                                aria-expanded="false">
                                <!-- Username -->
                                <%= userNameLogged %>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="#modalChangePassword" data-toggle="modal">Change Password</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#" id="btnCloseSession">Close Session</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Content -->
            <div class="container body-content">
                <!-- Tab content -->
                <p>&nbsp;</p>
                <nav>
                    <div class="nav nav-tabs" id="doctor-tab" role="tablist">
                        <a class="nav-item nav-link active" id="nav-searchF-tab" data-toggle="tab" href="#nav-film-search" role="tab" aria-controls="nav-film-search"
                            aria-selected="true">Search Film</a>
                        <a class="nav-item nav-link" id="nav-addFilm-tab" data-toggle="tab" href="#nav-addFilm" role="tab" aria-controls="nav-addFilm"
                            aria-selected="false">Add Film</a>
                        <a class="nav-item nav-link" id="nav-modifyFilm-tab" data-toggle="tab" href="#nav-modifyFilm" role="tab" aria-controls="nav-modifyFilm"
                            aria-selected="false">Modify Film</a>
                        <a class="nav-item nav-link" id="nav-deleteFilm-tab" data-toggle="tab" href="#nav-deleteFilm" role="tab" aria-controls="nav-deleteFilm"
                            aria-selected="false">Delete Film</a>
                    </div>
                </nav>
                <div class="tab-content" id="nav-tabContentSearchFilm">
                    <!-- Tab container Search Film -->
                    <div class="tab-pane fade show active" id="nav-film-search" role="tabpanel" aria-labelledby="nav-searchF-tab">
                        <br>
                            <form>
                                <p>Buscar por</p>
                                <div class="form-row">
                                    <div class="col">
                                        <select id="slcCampoFiltroHC" class="form-control form-control-sm">
                                            <option value="" selected>Selecciona...</option>
                                            <option value="documento">Documento</option>
                                            <option value="nombre">Nombre</option>
                                        </select>
                                    </div>
                                    <div class="col">
                                        <input id="valorCampoFiltroHC" type="text" class="form-control form-control-sm" disabled>
                                    </div>
                                    <div class="col">
                                        <button type="button" class="btn-sm btn-primary" id="btnBuscar" disabled>Buscar</button>
                                        <button type="button" class="btn-sm btn-primary" id="btnNuevaActuacion" data-target="#modalAgregarHC" data-toggle="modal"
                                            disabled>Nueva actuaci&oacute;n</button>
                                    </div>
                                </div>
                            </form>
                        <!-- <br>
                        <div class="row" id="errorB" style="text-align: center; display: none;"></div>
                        <br>
                        <table id="tablaBusquedaHistoriaClinica" class="table table-striped table-bordered" style="width:100%;">
                        </table> -->
                    </div>

                    <!-- Tab container Add Film -->
                    <div class="tab-pane fade" id="nav-addFilm" role="tabpanel" aria-labelledby="nav-addFilm-tab">
                        <br>
                        <form>
                            <p>Filtrar por</p>
                            <div class="form-row">
                                <div class="col">
                                    <select id="slcCampoFiltro" class="form-control form-control-sm">
                                        <option value="">Selecciona...</option>
                                        <option value="nombre">Nombre</option>
                                        <option value="especialidad">Especialidad</option>
                                    </select>
                                </div>
                                <div class="col">
                                    <input id="valorCampoFiltro" type="text" class="form-control form-control-sm" disabled>
                                </div>
                            </div>
                        </form>
                        <!-- <br>
                        <table class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th style="width: 15%;">N&uacute;mero</th>
                                    <th>Nombre</th>
                                    <th>Especialidad</th>
                                </tr>
                            </thead>
                            <tbody id="tablaAgenda">
                                <!-- Contenido de la Tabla
                            </tbody>
                        </table> -->
                    </div>

                    <!-- Tab container Modify Film -->
                    <div class="tab-pane fade" id="nav-modifyFilm" role="tabpanel" aria-labelledby="nav-modifyFilm-tab">
                        <br>
                        <table class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Fecha de atenci&oacute;n</th>
                                    <th>Paciente</th>
                                    <th>Motivo de la consulta</th>
                                </tr>
                            </thead>
                            <tbody id="tablaPacientesTratados">
                                Contenido de la Tabla 
                            </tbody>
                        </table>
                    </div>

                    <!-- Tab container Delete Film -->
                    <div class="tab-pane fade" id="nav-deleteFilm" role="tabpanel" aria-labelledby="nav-deleteFilm-tab">
                        <br>
                        <form>
                            <div class="form-row">
                                <div class="col" style="display: inherit;">
                                    <label for="datepicker" style="padding-right: 1em;">Fecha</label>
                                    <input id="datepicker" type="text" class="form-control form-control-sm" style="width: 20em" placeholder="dia/mes/aÃ±o">
                                </div>
                            </div>
                        </form>
                        <br>
                        <table class="table table-striped table-bordered" style="width:100%;" id="tablaPacientesTratadosDia">
                            <thead>
                                <tr>
                                    <th>Documento</th>
                                    <th>Nombre</th>
                                </tr>
                            </thead>
                            <tbody id="tbPTD">
                                Contenido de la tabla 
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modals -->

        <!-- Modal cambiar clave-->
        <div class="modal fade" id="modalChangePassword" tabindex="-1" role="dialog" aria-labelledby="modalmodalChangePasswordTitle" aria-hidden="true">
            <form action="/changePassword" method="POST">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalmodalChangePasswordTitle">Change Password</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Cancel">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="txtPassword">New password</label>
                                <input type="password" class="form-control" name="newPassword" id="txtPassword">
                            </div>
                            <div class="form-group">
                                <label for="txtVerifiedPassword">Repeat new password</label>
                                <input type="password" class="form-control" name="verifiedPassword" id="txtVerifiedPassword">
                            </div>
                                <div id="divErrorChangePassword" class="alert alert-danger alert-dismissable" style="display: none;"></div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                            <input type="submit" class="btn btn-success" id="btnCambiarClave" value="Apply"></button>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <!-- Modal Correctly -->
        <div class="modal fade" id="modalSuccess" tabindex="-1" role="dialog" aria-labelledby="modalSuccess" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content center  alert alert-success">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalSuccessTitulo"></h5>
                    </div>
                </div>
            </div>
        </div>

    </body>

</html>